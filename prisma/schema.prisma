generator client {
  provider        = "prisma-client-js"
  output          = "./generated-client"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["auth", "public"]
}

model Job {
  run_id           String    @id
  user_id          String?   
  slogan           String?
  cover_url        String?
  video_url        String?
  share_slug       String?   @unique
  status           String?   @default("running")
  provider_task_id String?
  created_at       DateTime? @default(now()) @db.Timestamptz(6)
  updated_at       DateTime? @default(now()) @updatedAt @db.Timestamptz(6)
  storyboards      Json?
  total_duration   Float?    @db.Real
  styles           String[]
  image_control    Boolean?  @default(false)

  @@index([created_at(sort: Desc)], map: "idx_jobs_created_at")
  @@index([provider_task_id], map: "idx_jobs_provider_task_id")
  @@index([share_slug], map: "idx_jobs_share_slug")
  @@index([status], map: "idx_jobs_status")
  @@index([storyboards], map: "idx_jobs_storyboards", type: Gin)
  @@index([user_id], map: "idx_jobs_user_id")
  @@map("jobs")
  @@schema("public")
}

model VideoTask {
  id               String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  run_id           String
  clip_idx         Int
  prompt           String
  ref_img          String?
  duration         Int?      @default(10)
  status           String?   @default("pending")
  provider_task_id String?
  video_url        String?
  error            String?
  retry_count      Int?      @default(0)
  createdAt        DateTime? @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt        DateTime? @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@index([createdAt], map: "idx_video_tasks_created_at")
  @@index([provider_task_id], map: "idx_video_tasks_provider_task_id")
  @@index([run_id], map: "idx_video_tasks_run_id")
  @@index([status], map: "idx_video_tasks_status")
  @@map("video_tasks")
  @@schema("public")
}

model CrewSession {
  run_id         String    @id
  session_id     String
  expected_clips Int
  status         String?   @default("waiting_videos")
  context        Json?
  result         String?
  error          String?
  createdAt      DateTime? @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt      DateTime? @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@index([createdAt], map: "idx_crew_sessions_created_at")
  @@index([session_id], map: "idx_crew_sessions_session_id")
  @@index([status], map: "idx_crew_sessions_status")
  @@map("crew_sessions")
  @@schema("public")
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String          @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  Authenticator Authenticator[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  profile   Profile?

  @@schema("public")
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@schema("public")
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@schema("public")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
  @@schema("public")
}

model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
  @@schema("public")
}

model Profile {
  id         String   @id
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  is_allowed Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  @@map("profiles")
  @@schema("public")
}
